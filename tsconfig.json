{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "./",
    "strict": true,
    "lib": [
      "ES2020"
    ],
    "esModuleInterop": true,
    "moduleDetection": "force",
  },
  "ts-node": {
    "esm": false,
    "experimentalSpecifierResolution": "node"
  }
}